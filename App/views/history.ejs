<!DOCTYPE html>
<html>

<head>
	<title>Airpnp-My history</title>
	<meta charset="UTF-8">
	<!--   <meta name="discription" content="Something about pets">
	<title>Login Page</title> -->
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel='stylesheet' href='/stylesheets/style.css' />

</head>
<!--comments here-->

<body class="subpage">
	<header id="header">
		<div class="inner">
			<a href="index" class="logo">
				<font size="+3"><strong>Airpnp</strong></font>
			</a>
			<nav id="nav">
				<% if (result.length) {%>
				<!--if no one logged in, do not display-->
				<a>Logged in as: <%= result[0].username%></a>
				<a href='index?action=logout'>Logout</a>
				<% } else { %>
				<a href="login">Login</a>
				<%}%>
				<a href="signup">Signup</a>
				<a href="listings">My listings</a>
				<a href="biddings">My biddings</a>
				<a href="wishlist">My wishlist</a>
				<a href="account">My account</a>
				<a href="history">My history</a>
			</nav>
			<a href="#navPanel" class="navPanelToggle"><span class="fa fa-bars"></span></a>
		</div>
	</header>
	<% if (!result.length) {%>
				<h4><center>You have not log in yet. Please log in first.</center></h4>

				<% } else {%>
				<footer id="footer">
					<div class="inner">
						<h3>Your past transactions </h3>
						<!-- As taker -->
						<h2>You as care taker</h2>
						<%if(taker_data.length) {%>
						<div class="table-wrapper" , style="padding-left:5%; padding-right:5%">
							<br />
							<table>
								<thead>
									<tr>
										<th scope="col">
											<font size="+1">Start Date</font>
										</th>
										<th scope="col">
											<font size="+1">End Date</font>
										</th>
										<th scope="col">
											<font size="+1">Client Name</font>
										</th>
										<th scope="col">
											<font size="+1">Status</font>
										</th>
										<th scope="col">
											<font size="+1">Bids</font>
										</th>
									</tr>
								</thead>
								<tbody style: align="left">
									<% for(var i=0; i<taker_data.length; i++) { %>
									<tr>
										<td>
											<font size="+1">
												<%= taker_data[i].startdate.toString().split(' ').slice(0, 4).join(' ')%>
											</font>
										</td>
										<td>
											<font size="+1">
												<%= taker_data[i].enddate.toString().split(' ').slice(0, 4).join(' ')%>
											</font>
										</td>
										<td>
											<font size="+1"><%= taker_data[i].ownername%></font>
										</td>
										<td>
											<font size="+1"><%= taker_data[i].status%></font>
										</td>
										<td>
											<font size="+1"><%= taker_data[i].bids%></font>
										</td>
									</tr>
									<% } %>
								</tbody>
							</table>
						</div>
						<%}else {%>
							<h4>You haven't taken care of any pets.</h4>
						<%}%>


						<br /><br />


						<!-- As owner -->
						<h2>You as pet owner</h2>
						<%if (owner_data.length) {%>
						<div class="table-wrapper" , style="padding-left:5%; padding-right:5%">
							<br />
							<table>
								<thead>
									<tr>
										<th scope="col">
											<font size="+1">Start Date</font>
										</th>
										<th scope="col">
											<font size="+1">End Date</font>
										</th>
										<th scope="col">
											<font size="+1">Host Name</font>
										</th>
										<th scope="col">
											<font size="+1">Status</font>
										</th>
										<th scope="col">
											<font size="+1">Bids</font>
										</th>
										<th scope="col"></th>
										<th scope="col"></th>
									</tr>
								</thead>
								<tbody style: align="left">
									<% for(var i=0; i<owner_data.length; i++) { %>
									<tr>
										<td>
											<font size="+1">
												<%= owner_data[i].startdate.toString().split(' ').slice(0, 4).join(' ')%>
											</font>
										</td>
										<td>
											<font size="+1">
												<%= owner_data[i].enddate.toString().split(' ').slice(0, 4).join(' ')%>
											</font>
										</td>
										<td>
											<font size="+1"><%= owner_data[i].hostname%></font>
										</td>
										<td>
											<font size="+1"><%= owner_data[i].status%></font>
										</td>
										<td>
											<font size="+1"><%= owner_data[i].bids%></font>
										</td>
										<td><a href=<%= "ownerview?id=" + owner_data[i].id%> class="button alt">Check it out!</a></td>
										<%if (owner_data[i].status != "completed") {%>
										<td><a href=<%= "history?id=" + owner_data[i].id + "&action=finish"%> class="button alt">Finish Deal</a></td>
										<%}%>
									</tr>
									<% } %>
								</tbody>
							</table>
						</div>
						<%}else {%>
							<h4>You haven't sent your pet out.</h4>
						<%}%>
					</div>
					<br /><br /><br /><br />
				</footer>
				<%}%>
</body>

</html>