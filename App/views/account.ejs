    <!--Manage pets here-->
    <footer id="footer">
        <div class="inner">
            <h3>
                <font size="+3"><strong>Manage your pets and account</strong></font>
            </h3>

            <!--Favourites-->
            <h3>Your favourite pet owners / care takers</h3>

            <div class="table-wrapper" , style="padding-left:20%; padding-right:20%; color:black">
