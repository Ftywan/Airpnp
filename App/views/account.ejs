                        </tr>
                    </tbody>
                </table>
            </div>

            <h3>Here are all your pets</h3>

            <!--List all pets here-->

            <div class="table-wrapper" , style="padding-left:5%; padding-right:5%">
                <br />
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody style="text-align: left">
